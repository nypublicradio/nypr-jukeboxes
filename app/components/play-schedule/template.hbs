{{#each (sort-by (concat "startTime:" @sortDirection) (filter-by "isCurrent" true schedule.airings)) as |airing index|}}
  <div class="playlist">
    {{play-schedule/show
      image             = (image-template airing.show.image.template 500 500 "l" 80)
      title             = airing.showTitle
      startTime         = airing.startTime
      endTime           = airing.endTime
      episode           = airing.episode
      tracks            = airing.tracks
      sortDirection     = @sortDirection
      isPlaylistVisible = (eq index 0)
    }}
  </div>
{{/each}}
